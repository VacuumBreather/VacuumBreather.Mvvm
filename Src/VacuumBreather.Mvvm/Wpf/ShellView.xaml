<Window x:Class="VacuumBreather.Mvvm.Wpf.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf1="clr-namespace:VacuumBreather.Mvvm.Wpf"
        d:DataContext="{d:DesignInstance wpf1:ShellViewModel}"
        mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <wpf1:NullToCollapsedConverter x:Key="NullToCollapsed" />
        </Grid.Resources>
        <ContentControl Content="{Binding MainContentConductor.ActiveItem, Mode=OneWay}" />
        <Grid Background="Transparent"
              Visibility="{Binding DialogConductor.ActiveItem, Mode=OneWay, Converter={StaticResource NullToCollapsed}}">
            <ContentControl Content="{Binding DialogConductor.ActiveItem, Mode=OneWay}" />
        </Grid>
    </Grid>
</Window>